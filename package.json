{
  "name": "vscode-mc-dev",
  "displayName": "MC Dev",
  "description": "VS Code tools to help with Minecraft mod development",
  "version": "0.0.1",
  "author": {
    "name": "Gaming32",
    "email": "gaming32i64@gmail.com",
    "url": "https://github.com/Gaming32"
  },
  "repository": {
    "url": "https://github.com/Gaming32/vscode-mc-dev"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-mc-dev.createMinecraftMod"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mc-dev.createMinecraftMod",
        "title": "MC Dev: Create Minecraft Mod"
      }
    ],
    "viewsWelcome": [
      {
        "view": "explorer",
        "when": "workspaceFolderCount == 0",
        "contents": "%viewsWelcome.explorer%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "extensionDependencies": [
    "mindaro-dev.file-downloader"
  ],
  "dependencies": {
    "@microsoft/vscode-file-downloader-api": "^1.0.0",
    "extract-zip": "^2.0.1",
    "mv": "^2.1.0",
    "node-fetch": "^2.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/mv": "^2.1.2",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.6.1",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  }
}
